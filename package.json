{
  "name": "meu-projeto-com-jest",
  "version": "1.0.0",
  "description": "Um exemplo de projeto com Jest e cobertura de c√≥digo",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-html-reporter": "^3.7.0" 
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": ["html", "text", "cobertura"]
  }
}
